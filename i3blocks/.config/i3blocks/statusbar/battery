case $BLOCK_BUTTON in
3) pgrep -x dunst >/dev/null && notify-send "ğŸ”‹ Battery module" "ğŸ”‹: discharging
ğŸ›‘: not charging
â™»: stagnant charge
ğŸ”Œ: charging
âš¡: charged
â—: battery very low!" ;;
