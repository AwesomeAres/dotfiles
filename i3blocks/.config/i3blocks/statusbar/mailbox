case $BLOCK_BUTTON in
3) $TERMINAL -e neomutt ;;
2) setsid $HOME/.config/mutt/etc/mailsync.sh >/dev/null &;;
1) pgrep -x dunst >/dev/null && notify-send "ðŸ“¬ Mail module" "\- Shows unread mail
- Shows ðŸ”ƒ if syncing mail
- Left click opens neomutt
- Middle click syncs mail" ;;
esac

if [ ! $(hostname) == "Atlas" ]; then
    echo "$(du -a $HOME/.mail/*/{INBOX,Inbox}/new/* 2>/dev/null | sed -n '$=') $(cat /tmp/imapsyncicon 2>/dev/null)"
fi
